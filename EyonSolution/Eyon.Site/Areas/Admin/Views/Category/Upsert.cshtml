@model Eyon.Models.ViewModels.CategoryViewModel

@{
    var title = "Create Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (Model.Category.Id != 0)
        {
            <input type="hidden" asp-for="Category.Id" />
            title = "Edit Category";
        }

        <div class="col-12">
            <h2 class="text-primary">@title</h2>
            <br />
        </div>
        <div class="col-9">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Category.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Category.Name" class="form-control" />
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Category.DisplayOrder"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Category.DisplayOrder" class="form-control" />
                    <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label>Add Image</label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="uploadBox" multiple class="form-control" accept="image/gif, image/jpeg, image/png" />
                    <span asp-validation-for="Category.SiteImageId" class="text-danger"></span>
                    <div class="row ">
                        <div class="col-3">
                            <label asp-for="SiteImage.Title" class="form-control border-0" />Title</label>
                        </div>
                        <div class="col-5">
                            <input asp-for="SiteImage.Title" class="form-control" />
                            <span asp-validation-for="SiteImage.Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-3">
                            <label asp-for="SiteImage.Alt" class="form-control border-0" />Alt Text</label>
                        </div>
                        <div class="col-5">
                            <input asp-for="SiteImage.Alt" class="form-control" />
                            <span asp-validation-for="SiteImage.Alt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Category.Id != 0)
                    {
                        // Edit button and back to list button
                        <partial name="_EditAndBackToListButton" model="Model.Category.Id" />
                    }
                    else
                    {
                        // Create button and back to list button
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
        @if (Model.Category.Id != 0)
        {
            <div class="col-3">                
                <div style="border-radius:5px; border:1px solid #bbb9b9" width="100%">
                    <partial name="_ViewImage" model="@Model.SiteImage"/>
                </div>
            </div>
        }
    </div>
</form>


