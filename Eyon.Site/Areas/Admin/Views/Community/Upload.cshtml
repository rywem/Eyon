@model Eyon.Models.SiteObjects.FileUpload;
@using Eyon.Core.SeedData.Location;
@{
    var title = "Upload Communities";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var selectItems = new List<SelectListItem>();
    selectItems.Add(new SelectListItem() {
        Text = nameof(Eyon.Core.SeedData.Location.ZipCodeFile),
        Value = "0"
    });
}

<h1>Upload CSV</h1>

<form method="post" asp-action="Upload" enctype="multipart/form-data">
    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-12">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-9">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FormFiles"></label>
                </div>
                <div class="col-8">
                    @*<input type="file" name="files" id="uploadBox" multiple class="form-control" accept="text/csv" />*@
                    <input asp-for="FormFiles" type="file" multiple class="form-control" accept="text/csv"  />
                    <span asp-validation-for="FormFiles"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-4 col-8">
                    <input asp-page-handler="Upload" type="submit" class="btn btn-primary form-control" value="Submit" />
                </div>
            </div>
        </div>
    </div>
</form>