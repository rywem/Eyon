@model IEnumerable<ApplicationUser>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">User List</h2>
        </div>
        @*<div class="col-6 text-right">
            <a asp-area="Admin" asp-controller="User" asp-action="Add" class="btn btn-outline-success">
                <i class="fas fa-plus"></i>&nbsp;New Employee Registration
            </a>
        </div>*@
    </div>
    <br />
    @if ( Model.Count() > 0 )
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Email)
                </th>
                <th>
                    Access
                </th>
                <th />
            </tr>
            @foreach ( var item in Model )
            {
        <tr>
            <td>
                @Html.DisplayFor(m => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(m => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(m => item.Email)
            </td>            
            <td>
                @if ( item.LockoutEnd == null || item.LockoutEnd < DateTime.Now )
                {
                    <a class="btn btn-success text-white" asp-action="Lock" asp-route-id="@item.Id" style="width: 50px;">
                        <i class="fas fa-lock-open"></i>
                    </a>
                }
                else
                {
                    <a class="btn btn-danger text-white" asp-action="Unlock" asp-route-id="@item.Id" style="width: 50px;">
                        <i class="fas fa-lock"></i>
                    </a>
                }
            </td>
        </tr>
            }

        </table>
    }
    else
    {
        <p>No users Exist.</p>
    }
</div>